{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "0.2.9",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "images/icon_16.png",
    "128": "images/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },

  "permissions": [
    "http://img2-ak.lst.fm/",
    "https://www.google-analytics.com/",
    "storage",
    "notifications",
    "unlimitedStorage",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    }
  ],

  "commands": {
    "mediaPlay": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Play Pause Media"
    },
    "mediaStop": {
      "suggested_key": {
        "default": "MediaStop"
      },
      "description": "Stop Media"
    },
    "mediaForward": {
      "suggested_key": {
        "default": "MediaNextTrack"
      },
      "description": "next track"
    },
    "mediaBack": {
      "suggested_key": {
        "default": "MediaPrevTrack"
      },
      "description": "previous track"
    },
    "volumeUp": {
      "description": "volume +"
    },
    "volumeDown": {
      "description": "volume -"
    }
  }
}
